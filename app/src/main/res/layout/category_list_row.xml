<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="115dp"
    android:layout_height="180dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/ivCategoryIcon"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_computer" />

    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Personal Care"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ivCategoryIcon"
        app:layout_constraintStart_toStartOf="@+id/ivCategoryIcon"
        app:layout_constraintTop_toBottomOf="@+id/ivCategoryIcon" />

    <TextView
        android:id="@+id/tvCategoryTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="and communication"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCategoryTitle"
        app:layout_constraintStart_toStartOf="@+id/tvCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryTitle" />

    <android.support.constraint.Guideline
        android:id="@+id/glvMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</android.support.constraint.ConstraintLayout>